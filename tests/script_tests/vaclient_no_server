#!/bin/bash

EXPECTED="Failed to establish a new connection: [Errno 111] Connection refused"

OUTPUT=$($SOURCE_DIR/vaclient/vaclient.sh run object_detection/1 https://github.com/intel-iot-devkit/sample-videos/blob/master/bottle-detection.mp4?raw=true)
RETURN_CODE=$?

if [[ $RETURN_CODE != 1 ]]; then
    error
fi

if [[ ! "$OUTPUT" == *"$EXPECTED"* ]]; then
    error "Unexpected output"
fi
